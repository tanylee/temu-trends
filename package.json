{
  "name": "temu-trends",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "collect:trends": "node scripts/collect_trends.js --window=3m && node scripts/collect_seasonal.js && node scripts/score_trends.js && node scripts/merge_trends.js",
    "map:temu": "node scripts/map_trends_to_temu.js && node scripts/validate_temu_links.js",
