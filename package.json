    "pin": "node scripts/pinner_headless.js"
  },
  "dependencies": {
    "playwright": "^1.46.0",
    "node-fetch": "^3.3.2",
    "dayjs": "^1.11.11",
    "tz-offset": "^0.0.2",
    "slugify": "^1.6.6",
    "papaparse": "^5.4.1",
    "uuid": "^9.0.1"
  }
}
